<div class="panel panel-info">
  <div class="panel-heading">created <%= time_ago_in_words(task.created_at) %> ago</div>
  <div class="panel-body"><%= task.content %></div>
  <div class="panel-footer text-center">
  <% if task.state == "doing" %>
    <%= link_to "Mark as To Do", change_task_path(task, state: "to_do"), method: :put %>
    <%= link_to "Mark as Done", change_task_path(task, state: "done"), method: :put %>
  <% else %>
    <%= link_to "Mark as Doing", change_task_path(task, state: "doing"), method: :put %>
  <% end %>
  </div>
</div>
